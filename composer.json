{
    "name": "vjik/simple-type-caster",
    "type": "library",
    "description": "Simple library for value type casting",
    "keywords": [
        "type",
        "cast",
        "casting"
    ],
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/vjik/simple-type-caster/issues?state=open",
        "source": "https://github.com/vjik/simple-type-caster"
    },
    "require": {
        "php": "^8.1",
        "yiisoft/strings": "^2.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.62",
        "maglnet/composer-require-checker": "^4.7",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.0",
        "roave/infection-static-analysis-plugin": "^1.35",
        "vimeo/psalm": "^5.23"
    },
    "autoload": {
        "psr-4": {
            "Vjik\\SimpleTypeCaster\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vjik\\SimpleTypeCaster\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": false
        }
    }
}
